        <ProgressBar Grid.Row="2" Grid.Column ="1" Height="25" Margin="10" Minimum="{Binding MinimumProgress}" Maximum="{Binding MaximumProgress}" Value="{Binding ValueProgress, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding ShowTotalProcess, Converter={StaticResource boolToHiddenConverter}, FallbackValue=Visible}"/>

